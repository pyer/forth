# Build pf
# Pyer's Forth
# Pierre BAZONNARD
#40-Ubuntu SMP Wed May 23 20:30:51 UTC 2012 x86_64 x86_64 x86_64 GNU/Linux
#
require 'rake/clean'

# pf is stand alone forth executable
task :default => [:x86]
# pfe is pfe + libpfe
#task :default => ['pfe']

task :help do
  puts "before compiling ARM architecture, set up environment: source /usr/local/angstrom/arm/environment-setup"
end

task :arm do
  ARCH='ARM'
# before compiling, set up environment:
# source /usr/local/angstrom/arm/environment-setup
  Rake::Task[:install].invoke
end

task :x86 do
  ARCH='X86'
  Rake::Task[:install].invoke
  sh "sudo install -m 755 pf /usr/local/bin/pf"
  sh "sudo install -m 755 pf.4th /usr/local/etc/pf.4th"
  sh "rm pf"
end

task :install => ['pf'] do
  puts "Architecture is #{ARCH}"
end

CLEAN.include('target')

directory 'target'

file 'libpfe.so' => ['target/core-sub.o','target/core-ext.o','target/core-mix.o','target/cdecl-ext.o','target/dict-sub.o','target/dict-comp.o','target/header-sub.o','target/header-ext.o','target/double-sub.o','target/double-ext.o','target/double-mix.o','target/exception-sub.o','target/exception-ext.o','target/engine-sub.o','target/engine-ext.o','target/engine-set.o','target/environ-ext.o','target/option-ext.o','target/option-set.o','target/facility-ext.o','target/facility-mix.o','target/file-ext.o','target/file-sub.o','target/file-mix.o','target/floating-ext.o','target/floating-mix.o','target/locals-ext.o','target/memory-alloc-ext.o','target/tools-sub.o','target/tools-ext.o','target/tools-mix.o','target/search-order-ext.o','target/string-ext.o','target/memory-sub.o','target/chainlist-ext.o','target/debug-ext.o','target/lined.o','target/forth-83-ext.o','target/forth-usual-ext.o','target/misc-ext.o','target/posix-ext.o','target/shell-os-ext.o','target/signals-ext.o','target/system-ext.o','target/useful-ext.o','target/your-ext.o','target/term-sub.o','target/term-ext.o','target/term-def.o','target/dl-def.o','target/dl-ext.o','target/with-spy.o','target/version-sub.o','target/_missing.o','target/os-string.o','target/os-ctype.o','target/os-delay.o','target/p4-gettimeofday.o'] do
  sh "gcc -shared -fPIC -o libpfe.so target/core-sub.o target/core-ext.o target/core-mix.o target/cdecl-ext.o target/dict-sub.o target/dict-comp.o target/header-sub.o target/header-ext.o target/double-sub.o target/double-ext.o target/double-mix.o target/exception-sub.o target/exception-ext.o target/engine-sub.o target/engine-ext.o target/engine-set.o target/environ-ext.o target/option-ext.o target/option-set.o target/facility-ext.o target/facility-mix.o target/file-ext.o target/file-sub.o target/file-mix.o 'target/floating-ext.o' 'target/floating-mix.o' target/locals-ext.o target/memory-alloc-ext.o target/tools-sub.o target/tools-ext.o target/tools-mix.o target/search-order-ext.o target/string-ext.o target/memory-sub.o target/chainlist-ext.o target/debug-ext.o target/lined.o target/forth-83-ext.o target/forth-usual-ext.o target/misc-ext.o target/posix-ext.o target/shell-os-ext.o target/signals-ext.o target/system-ext.o target/useful-ext.o target/your-ext.o target/term-sub.o target/term-ext.o target/term-def.o target/dl-def.o target/dl-ext.o target/with-spy.o target/version-sub.o target/_missing.o target/os-string.o target/os-ctype.o target/os-delay.o target/p4-gettimeofday.o" 
end

file 'pf' => ['target','target/main.o','target/core-sub.o','target/core-ext.o','target/core-mix.o','target/cdecl-ext.o','target/dict-sub.o','target/dict-comp.o','target/header-sub.o','target/header-ext.o','target/double-sub.o','target/double-ext.o','target/double-mix.o','target/exception-sub.o','target/exception-ext.o','target/engine-sub.o','target/engine-ext.o','target/engine-set.o','target/environ-ext.o','target/facility-ext.o','target/facility-mix.o','target/file-ext.o','target/file-sub.o','target/file-mix.o','target/floating-ext.o','target/floating-mix.o','target/locals-ext.o','target/memory-alloc-ext.o','target/tools-sub.o','target/tools-ext.o','target/tools-mix.o','target/search-order-ext.o','target/string-ext.o','target/memory-sub.o','target/debug-ext.o','target/lined.o','target/forth-83-ext.o','target/forth-usual-ext.o','target/misc-ext.o','target/posix-ext.o','target/shell-os-ext.o','target/signals-ext.o','target/system-ext.o','target/your-ext.o','target/term-sub.o','target/term-ext.o','target/term-lib.o','target/toolbelt-ext.o','target/with-spy.o','target/version-sub.o','target/_missing.o','target/os-string.o','target/os-ctype.o','target/os-delay.o','target/p4-gettimeofday.o','target/zchar-ext.o' ] do
  sh "gcc -D#{ARCH} -g -Wall -Wstrict-prototypes -W,--warn-common -fPIC -rdynamic -o pf target/main.o target/core-sub.o target/core-ext.o target/core-mix.o target/cdecl-ext.o target/dict-sub.o target/dict-comp.o target/header-sub.o target/header-ext.o target/double-sub.o target/double-ext.o target/double-mix.o target/exception-sub.o target/exception-ext.o target/engine-sub.o target/engine-ext.o target/engine-set.o target/environ-ext.o target/facility-ext.o target/facility-mix.o target/file-ext.o target/file-sub.o target/file-mix.o 'target/floating-ext.o' 'target/floating-mix.o' target/locals-ext.o target/memory-alloc-ext.o target/tools-sub.o target/tools-ext.o target/tools-mix.o target/search-order-ext.o target/string-ext.o target/memory-sub.o target/debug-ext.o target/lined.o target/forth-83-ext.o target/forth-usual-ext.o target/misc-ext.o target/posix-ext.o target/shell-os-ext.o target/signals-ext.o target/system-ext.o target/your-ext.o target/term-sub.o target/term-ext.o target/term-lib.o target/toolbelt-ext.o target/with-spy.o target/version-sub.o target/_missing.o target/os-string.o target/os-ctype.o target/os-delay.o target/p4-gettimeofday.o target/zchar-ext.o -lm"
end

#file 'target/main.o' => ['src/main.c']

file 'pfe' => ['target','target/main.o', 'libpfe.so' ] do
  sh "sudo mv libpfe.so /usr/lib/libpfe.so"
  sh "gcc -g -Wall -Wstrict-prototypes -W,--warn-common -o pfe target/main.o -Wl,--export-dynamic /usr/lib/libpfe.so -ldl -lm"
  sh "sudo install -m 755 pfe /bin/pfe"
  sh "rm pfe"
end

rule /target\/.*\.o/ => proc {|t| t.pathmap('src/%n.c')} do |t|
  object = t.source.ext('o').sub(/^src/,'target')
  sh "gcc -D#{ARCH} -Isrc -Isrc/include -Isrc/pfe -O1 -g -Wall -fPIC -Wstrict-prototypes -c -o #{object} #{t.source}"
end

